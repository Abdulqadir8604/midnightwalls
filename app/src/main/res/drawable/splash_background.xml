<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:drawable="@drawable/splash_bg"
        android:background="#232F34" />

    <item android:top="200dp">
        <bitmap
            android:src="@drawable/app_name_text"
            android:gravity="top" />
    </item>

    <item android:gravity="center" android:top="50dp">
        <bitmap
            android:src="@drawable/branding"
            android:gravity="bottom" />
    </item>

    <item android:gravity="bottom" android:bottom="20dp">
        <bitmap
            android:src="@mipmap/ic_launcher_foreground"
            android:gravity="center"/>
    </item>

</layer-list>